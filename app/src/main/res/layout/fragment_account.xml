<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/my_white"
    tools:context=".ui.news.NewsFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="0dp"
                android:layout_height="240dp"
                android:src="@color/red"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/imageView6"
                android:layout_width="140dp"
                android:layout_height="140dp"
                android:layout_marginTop="20dp"
                android:src="@drawable/avatar"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/imageView3" />

            <TextView
                android:id="@+id/textView14"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Дмитрий Задорожный"
                android:textSize="18sp"
                android:textColor="@color/my_white"
                android:fontFamily="@font/outfit_regular"
                app:layout_constraintEnd_toEndOf="@+id/imageView6"
                app:layout_constraintStart_toStartOf="@+id/imageView6"
                app:layout_constraintTop_toBottomOf="@+id/imageView6" />

            <ImageView
                android:id="@+id/imageView7"
                android:layout_width="0dp"
                android:layout_height="150dp"
                android:src="@drawable/account_bonus"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/imageView3" />

            <TextView
                android:id="@+id/textView17"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="19dp"
                android:fontFamily="@font/outfit_regular"
                android:text="Бонусные баллы"
                android:textColor="@color/my_black"
                android:textSize="20sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@+id/imageView7"
                app:layout_constraintTop_toBottomOf="@+id/imageView3" />

            <TextView
                android:id="@+id/textView18"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/outfit_bold"
                android:text="284"
                android:textColor="@color/red"
                android:textSize="30sp"
                app:layout_constraintEnd_toEndOf="@+id/textView17"
                app:layout_constraintStart_toStartOf="@+id/textView17"
                app:layout_constraintTop_toBottomOf="@+id/textView17" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/button18"
                android:layout_width="120dp"
                android:layout_height="30dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/red_mini_button"
                android:fontFamily="@font/outfit_light"
                android:text="Потратить"
                android:textAllCaps="false"
                android:textColor="@color/my_white"
                android:textSize="16sp"
                app:layout_constraintEnd_toEndOf="@+id/textView17"
                app:layout_constraintStart_toStartOf="@+id/textView17"
                app:layout_constraintTop_toBottomOf="@+id/textView18" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/imageView7">

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/button6"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:background="@drawable/account_button"
                    android:fontFamily="@font/outfit_regular"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp"
                    android:gravity="left|center_vertical"
                    android:drawablePadding="15dp"
                    android:text="Редактировать профиль"
                    android:textAllCaps="false"
                    android:textColor="@color/my_black"
                    android:textSize="18sp"
                    android:drawableStart="@drawable/ic_edit" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/button12"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:background="@drawable/account_button"
                    android:fontFamily="@font/outfit_regular"
                    android:gravity="left|center_vertical"
                    android:drawablePadding="15dp"
                    android:drawableStart="@drawable/ic_chosen"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp"
                    android:text="Избранное"
                    android:textAllCaps="false"
                    android:textColor="@color/my_black"
                    android:textSize="18sp" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/button13"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:background="@drawable/account_button"
                    android:fontFamily="@font/outfit_regular"
                    android:gravity="left|center_vertical"
                    android:drawablePadding="15dp"
                    android:drawableStart="@drawable/ic_order"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp"
                    android:text="Мои бронирования"
                    android:textAllCaps="false"
                    android:textColor="@color/my_black"
                    android:textSize="18sp" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/button14"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:background="@drawable/account_button"
                    android:fontFamily="@font/outfit_regular"
                    android:gravity="left|center_vertical"
                    android:drawablePadding="15dp"
                    android:drawableStart="@drawable/ic_referral"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp"
                    android:text="Реферальная программа"
                    android:textAllCaps="false"
                    android:textColor="@color/my_black"
                    android:textSize="18sp" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/button"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:background="@drawable/account_button"
                    android:drawableStart="@drawable/ic_notifications"
                    android:drawablePadding="15dp"
                    android:fontFamily="@font/outfit_regular"
                    android:gravity="left|center_vertical"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp"
                    android:text="Уведомления"
                    android:textAllCaps="false"
                    android:textColor="@color/my_black"
                    android:textSize="18sp" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/button15"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:background="@drawable/account_button"
                    android:fontFamily="@font/outfit_regular"
                    android:gravity="left|center_vertical"
                    android:drawablePadding="15dp"
                    android:drawableStart="@drawable/ic_support"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp"
                    android:text="Служба поддержки"
                    android:textAllCaps="false"
                    android:textColor="@color/my_black"
                    android:textSize="18sp" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/button16"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:background="@drawable/account_button"
                    android:fontFamily="@font/outfit_regular"
                    android:gravity="left|center_vertical"
                    android:drawablePadding="15dp"
                    android:drawableStart="@drawable/ic_info"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp"
                    android:text="Дополнительная информация"
                    android:textAllCaps="false"
                    android:textColor="@color/my_black"
                    android:textSize="18sp" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/button17"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:background="@drawable/account_button"
                    android:fontFamily="@font/outfit_regular"
                    android:gravity="left|center_vertical"
                    android:drawablePadding="15dp"
                    android:drawableStart="@drawable/ic_exit"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp"
                    android:text="Выйти из аккаунта"
                    android:textAllCaps="false"
                    android:textColor="@color/my_black"
                    android:textSize="18sp" />

            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>